<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout
				pattern="%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n" />
		</Console>
		<File name="FileLogger"
			fileName="logs/AutomationTest.log">
			<PatternLayout
				pattern="%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n" />
		</File>
	</Appenders>
	<Loggers>
		<!-- Set specific package to log everything -->
		<Logger name="com.flentas" level="debug" additivity="false">
			<AppenderRef ref="Console" />
			<AppenderRef ref="FileLogger" />
		</Logger>

		<!-- Root logger logs errors and above -->
		<Root level="error">
			<AppenderRef ref="Console" />
			<AppenderRef ref="FileLogger" />
		</Root>
	</Loggers>
</Configuration>
